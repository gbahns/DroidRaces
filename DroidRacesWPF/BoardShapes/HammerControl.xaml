<UserControl 
	x:Class="DroidRacesWPF.BoardShapes.HammerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
	xmlns:local="clr-namespace:DroidRacesWPF.BoardShapes"
	mc:Ignorable="d" 
	d:DesignHeight="300" d:DesignWidth="300">
	<Viewbox StretchDirection="Both" Stretch="Uniform">
		<Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Height="100">
			<Rectangle Fill="#FF030303"  Stroke="Black" Height="69" RenderTransformOrigin="0.5,0.5" Canvas.Left="50" Canvas.Top="30" Width="12">
				<Rectangle.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform Angle="-42.536"/>
						<TranslateTransform/>
					</TransformGroup>
				</Rectangle.RenderTransform>
			</Rectangle>
			<Rectangle Fill="#FF030303" Stroke="Blue" Height="33" RenderTransformOrigin="0.5,0.5" Canvas.Left="17" Canvas.Top="17" Width="20">
				<Rectangle.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform Angle="-132.458"/>
						<TranslateTransform/>
					</TransformGroup>
				</Rectangle.RenderTransform>
			</Rectangle>
		</Canvas>

	</Viewbox>
</UserControl>
