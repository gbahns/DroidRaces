<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DroidRacesWPF"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="DroidRacesWPF.WrenchControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

	<Viewbox StretchDirection="Both" Stretch="Uniform">
		<Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Height="100">
			<Rectangle Fill="#FF030303"  Stroke="Black" Height="69" RenderTransformOrigin="0.5,0.5" Canvas.Left="30" Canvas.Top="30" Width="12">
				<Rectangle.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform Angle="42.536"/>
						<TranslateTransform/>
					</TransformGroup>
				</Rectangle.RenderTransform>
			</Rectangle>
			<ed:Arc ArcThickness="1" ArcThicknessUnit="Percent" EndAngle="360" Fill="Black" ed:GeometryEffect.GeometryEffect="Sketch" Height="35" Stretch="Uniform" Stroke="Black" StartAngle="90" Width="36" Canvas.Left="53" Canvas.Top="10"/>
		</Canvas>

	</Viewbox>
</UserControl>
